# commands w/ default options
alias ls="ls -hNAv --color=auto --group-directories-first" # N supresses quotes, A ignores the dot and dotdot dirs, v shows dotfiles first
alias mkdir="mkdir -pv"
alias mv="mv -v"
alias rm="trash -v"

# one-letter aliases
alias h="cat $HOME/.cache/zsh_history | grep -i"
alias p="sudo pacman"
alias t="tmux"
alias v="nvim"

alias gg="lazygit -p ."
alias gs="git status"
# if I only type lazygit, autojump may take us to the lazygit dir
alias td="sh todo.sh"
alias src="source $ZDOTDIR/.zshrc"

# devour
alias dbrave='devour brave'
alias dsxiv='devour sxiv'
alias dzathura='devour zathura'

# copy current pwd to clipboard
alias cpwd="pwd | tr '\n' ' ' | xsel -ib"

# Quickly write and read notes
notesFile="$HOME/drive/notes"
alias rnote="bat $notesFile"
alias cnote="truncate -s 0 $notesFile" # -s 0 specify the size
# save a quick note: must be a function to accept arguments
function wnote {
    echo "$(date "+%a, %b %d %Y @ %H:%M")" >> $notesFile
    echo "$@" >> $notesFile
    echo "" >> $notesFile
}
